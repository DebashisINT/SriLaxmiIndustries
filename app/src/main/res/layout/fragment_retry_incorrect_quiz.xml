    <LinearLayout
        android:id="@+id/ll_incorrect_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_incorrect_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect Answers"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"/>

    </LinearLayout>

       <!-- <androidx.viewpager.widget.ViewPager
            android:id="@+id/tab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selector_tab_LL" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_root_in_correct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/incrrct_anim"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:visibility="gone"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/_10sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/sorry_anim" />



            <LinearLayout
                android:id="@+id/ll_continue_learning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/book_n"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="Review Incorrect Questions"/>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_design_3"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    >
                    <LinearLayout
                        android:id="@+id/ll_content_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="#CCECECEC"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/topic_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Topic Name"
                                android:textStyle="normal"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="#8D8D8D"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="3dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp">

                                <ImageView
                                    android:id="@+id/content_thumbnail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    />

                                <!--<TextView
                                    android:id="@+id/perform_video_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text=""
                                    android:textColor="@color/white" />-->

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/_7sdp"
                                android:layout_gravity="center"
                                android:paddingRight="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/content_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="#393939"
                                    android:textStyle="bold"
                                    android:maxLines="3"
                                    android:ellipsize="marquee"
                                    />

                                <TextView
                                    android:id="@+id/tv_perform_subtitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:textColor="#969696"
                                    android:visibility="gone"
                                    android:textSize="@dimen/_9sdp" />

                                <com.google.android.material.progressindicator.LinearProgressIndicator
                                    android:id="@+id/learning_progress_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    app:indicatorSize="@dimen/_80sdp"
                                    app:trackThickness="@dimen/_3sdp"
                                    app:trackColor="#DFDFDF"
                                    app:indicatorColor="@color/toolbar_lms"
                                    android:layout_gravity="center_horizontal"
                                    app:trackCornerRadius="8dp"
                                    android:visibility="gone"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:layout_marginTop="@dimen/_7sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_33sdp"
                                        android:layout_height="@dimen/_33sdp" />

                                    <Space
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_3sdp" />

                                    <ImageView
                                        android:layout_width="@dimen/_28sdp"
                                        android:layout_height="@dimen/_28sdp"
                                        android:layout_gravity="center"/>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_98sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Incorrrect Question(s)"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:paddingStart="@dimen/_15sdp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_incorrect_answer_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </FrameLayout>






            <TextView
                android:id="@+id/no_incrcct_answr"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_150sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No incorrect answer found"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_no_data_found_retry"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_data_found_img_modify"/>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/incrct_progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            wheel:matProg_barColor="@color/default_text_color"
            wheel:matProg_progressIndeterminate="true" />
    </FrameLayout>

</LinearLayout>